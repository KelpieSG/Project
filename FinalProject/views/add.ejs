 <main>
    <div class="container mt-5">
      <h1>Add Incident</h1>
     <form action="/add" method="POST">

      <label for="location">Location of Incident:</label>
      <input type="text" id="location" name="Location" required>

      <label for="incident_date">Date of Incident:</label>
      <input type="date" id="incident_date" name="Incident_Date" required>

      <label for="incident_type">Type of Incident:</label>
      <input type="text" id="incident_type" name="Incident_Type" required>

      <label for="injury_count">Injury Count:</label>
      <input type="number" id="injury_count" name="Injury_Count" required>

      <button type="submit">Add Incident</button>
     </form>
    </div>
